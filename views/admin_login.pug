head
  title Admin Login
  meta(charset="utf-8")
  meta(name="viewport",content="width=device-width,initial-scale=1")
  link(href="/public/stylesheets/adminForms.css", rel="stylesheet")
body
  form(method="POST" action='')
    label(for="username") Username:
    input#username(type="text" placeholder="Username" required="true" name="username" )
    label(for="password") Password:
    input#password(type="password", required="true" name="password" minlength="8")
    button(type="submit") Login

    if errors
      ul
        for error in errors
          li=error.msg
